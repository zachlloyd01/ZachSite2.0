@{
	ViewBag.Title = "Contact";
	if (!string.IsNullOrEmpty(ViewBag.contacterror))
	{
		<div class="alert alert-danger alert-dismissible fade show" role="alert">
			Please enter the <strong>@ViewBag.contacterror</strong> field!
			<button type="button" class="close" data-dismiss="alert" aria-label="Close">
				<span aria-hidden="true">&times;</span>
			</button>
		</div>
		ViewBag.contacterror = string.Empty;
	}
	}
	<h2 align="center" style="padding-bottom: 3%;">Contact Me</h2>

	@model ZachSite2._0.Models.Contact

	@using (Html.BeginForm("ContactForm", "Home", FormMethod.Post))
	{
		@Html.AntiForgeryToken()
		<div class="col-lg-auto col-sm-auto col-md-auto" style="padding-left:25%; padding-right: 25%;">
			<div class="form-group">
				<label for="Name">Name:</label>
				@Html.TextBoxFor(model => model.Name, new { @class = "form-control form-control-lg col-lg-auto col-sm-auto col-md-auto", @placeholder = "First Last...", @style = "width: 100%;" })
				@Html.ValidationMessageFor(model => model.Name)
			</div>

			<div class="form-group">
				<label for="Email">Email:</label>
				@Html.TextBoxFor(model => model.Email, new { @class = "form-control form-control-lg col-lg-auto col-sm-auto col-md-auto", @type = "email", @placeholder = "anon@example.com...", @style = "width: 100%;" })
				@Html.ValidationMessageFor(model => model.Email)
			</div>

			<div class="form-group">
				<label for="Message">Message:</label>
				@Html.TextAreaFor(model => model.Message, new { @class = "form-control form-control-lg col-lg-auto col-sm-auto col-md-auto", @placeholder = "Enter Message...", @style = "resize: none; width: 100%;", @rows = "10" })
				@Html.ValidationMessageFor(model => model.Message)
			</div>

			<button type="submit" class="btn btn-primary btn-lg">Submit</button>
		</div>
	}
