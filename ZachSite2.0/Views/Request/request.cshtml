@{
	ViewBag.Title = "New Site Request";
}
<h2 align="center" style="padding-bottom: 3%;">New Website Request</h2>

@model ZachSite2._0.Models.RequestModel

@using (Html.BeginForm("RequestForm", "Request", FormMethod.Post))
{
	@Html.AntiForgeryToken()
<div class="col-lg-auto col-sm-auto col-md-auto" style="padding-left:25%; padding-right: 25%;">
	<div class="form-group">
		<label for="FirstName">First Name:</label>
		@Html.TextBoxFor(model => model.FirstName, new { @class = "form-control form-control-lg col-lg-auto col-sm-auto col-md-auto", @placeholder = "First...", @style = "width: 100%;" })
		@Html.ValidationMessageFor(model => model.FirstName)
	</div>

	<div class="form-group">
		<label for="LastName">Last Name:</label>
		@Html.TextBoxFor(model => model.LastName, new { @class = "form-control form-control-lg col-lg-auto col-sm-auto col-md-auto", @placeholder = "Last...", @style = "width: 100%;" })
		@Html.ValidationMessageFor(model => model.LastName)
	</div>

	<div class="form-group">
		<label for="EmailAddress">Email:</label>
		@Html.TextBoxFor(model => model.EmailAddress, new { @class = "form-control form-control-lg col-lg-auto col-sm-auto col-md-auto", @type = "email", @placeholder = "anon@example.com...", @style = "width: 100%;" })
		@Html.ValidationMessageFor(model => model.EmailAddress)
	</div>

	<div class="form-group">
		<label for="ConfirmEmail">Confirm Email:</label>
		@Html.TextBoxFor(model => model.ConfirmEmail, new { @class = "form-control form-control-lg col-lg-auto col-sm-auto col-md-auto", @type = "email", @placeholder = "anon@example.com...", @style = "width: 100%;" })
		@Html.ValidationMessageFor(model => model.ConfirmEmail)
	</div>

	<div class="form-group">
		<label for="ProposalMessage">Proposal:</label>
		@Html.TextAreaFor(model => model.ProposalMessage, new { @class = "form-control form-control-lg col-lg-auto col-sm-auto col-md-auto", @placeholder = "What the site does, number of pages, general design, etc...", @style = "resize: none; width: 100%;", @rows = "10" })
		@Html.ValidationMessageFor(model => model.ProposalMessage)
	</div>

	<button type="submit" class="btn btn-primary btn-lg">Submit</button>
</div>
}
